{
  "name": "remotion-fast",
  "version": "0.1.0",
  "private": true,
  "description": "A powerful Remotion-based video editor component library",
  "scripts": {
    "build": "pnpm -r --filter='!examples/*' build",
    "build:packages": "pnpm -r --filter='packages/*' build",
    "build:examples": "pnpm -r --filter='examples/*' build",
    "dev": "pnpm --filter=basic-editor-example dev",
    "dev:packages": "pnpm -r --filter='packages/*' --parallel dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:dist": "pnpm -r --filter='packages/*' exec rm -rf dist",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "prepare": "husky install"
  },
  "keywords": [
    "remotion",
    "video-editor",
    "react",
    "component-library"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@remotion/cli": "^4.0.363",
    "@remotion/player": "^4.0.363",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^12.23.24",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remotion": "^4.0.363",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
